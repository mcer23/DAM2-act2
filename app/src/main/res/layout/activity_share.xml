<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shareActivity">

    <Button
        android:id="@+id/whatsapp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:foreground="@drawable/wsp"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatsapp"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/twitter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:foreground="@drawable/twit"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="twitter"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/insta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:foreground="@drawable/insta"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compartir por..."
        android:textColor="#385E9D"
        android:textFontWeight="700"
        android:textSize="12pt"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="43dp" />

    <Button
        android:id="@+id/face"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:foreground="@drawable/fcb"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="196dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:foreground="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="391dp" />
</androidx.constraintlayout.widget.ConstraintLayout>